{
  "name": "@cpmech/rcomps",
  "version": "3.8.0",
  "private": true,
  "author": {
    "name": "Dorival Pedroso",
    "email": "dorival.pedroso@gmail.com",
    "url": "https://github.com/cpmech"
  },
  "repository": "cpmech/rcomps",
  "scripts": {
    "start": "react-scripts start",
    "build:app": "react-scripts build",
    "test": "react-scripts test",
    "tw": "react-scripts test --watch",
    "cov": "react-scripts test --coverage",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .eslintignore . --ext ts --ext tsx",
    "lint:fix": "yarn lint --fix",
    "sb": "start-storybook -p 9009 -s public",
    "bsb": "build-storybook -c .storybook -o docs",
    "build": "rm -rf dist && mkdir dist && rsync -av src/components/* dist --exclude __stories__ --exclude __tests__",
    "dist": "yarn build && cp package.rlib.json dist/package.json && cd dist/ && yarn publish --access=public || true && cd .. && rm -rf dist/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "@emotion/core": "^10.0.28",
    "@reach/router": "^1.3.3",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-responsive": "^8.0.3"
  },
  "devDependencies": {
    "@cpmech/react-icons": "^2.16.0",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-knobs": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addon-storyshots": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/react": "^5.3.17",
    "@types/jest": "25.1.4",
    "@types/node": "13.9.1",
    "@types/reach__router": "^1.3.0",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/react-responsive": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "react-responsive": "^8.0.3",
    "react-scripts": "3.4.0",
    "require-context.macro": "^1.2.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@cpmech/basic": "^4.10.0",
    "@cpmech/util": "^1.12.0"
  }
}
