{
  "name": "@cpmech/rcomps",
  "version": "5.0.0",
  "private": true,
  "author": {
    "name": "Dorival Pedroso",
    "email": "dorival.pedroso@gmail.com",
    "url": "https://github.com/cpmech"
  },
  "repository": "cpmech/rcomps",
  "scripts": {
    "start": "react-scripts start",
    "build:app": "react-scripts build",
    "test": "react-scripts test",
    "tw": "react-scripts test --watch",
    "cov": "react-scripts test --coverage",
    "lint": "eslint '*/**/*.{ts,tsx}' --quiet --fix",
    "sb": "start-storybook -p 9009 -s public",
    "bsb": "build-storybook -c .storybook -o docs",
    "build": "rm -rf dist && mkdir -p dist/rcomps && rsync -av src/components/* dist/rcomps --exclude __stories__ --exclude __tests__",
    "dist": "yarn build && cp package-dist.json dist/package.json && cd dist/ && yarn publish --access=public || true && cd .. && rm -rf dist/",
    "postinstall": "bash ./zscripts/npm_postinstall.bash"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cpmech/basic": "^4.22.1",
    "@cpmech/react-icons": "^4.1.0",
    "@cpmech/util": "^1.25.1",
    "@emotion/react": "^11.1.5",
    "@storybook/addon-essentials": "^6.1.17",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.17",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.26",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-responsive": "^8.0.2",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-responsive": "^8.2.0",
    "react-scripts": "4.0.2",
    "typescript": "^4.1.5",
    "web-vitals": "^1.1.0"
  },
  "peerDependencies": {
    "@cpmech/basic": "^4.22.1",
    "@cpmech/react-icons": "^4.1.0",
    "@cpmech/util": "^1.25.1",
    "@emotion/react": "^11.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-responsive": "^8.2.0",
    "react-scripts": "4.0.2",
    "typescript": "^4.1.5",
    "web-vitals": "^1.1.0"
  }
}
